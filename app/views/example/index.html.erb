<div class="p-4">
  <div class="bg-white mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-4 text-center">User Profile</h1>
    <div class="space-y-2 border-t border-gray-200 pt-4">
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">Name:</strong> <span><%= @name %></span></div>
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">Email:</strong> <span><%= @email %></span></div>
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">Phone:</strong> <span><%= @phone %></span></div>
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">Address:</strong> <span><%= @address %></span></div>
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">City:</strong> <span><%= @city %></span></div>
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">State:</strong> <span><%= @state %></span></div>
      <div class="text-base text-gray-700"><strong class="font-bold text-gray-800">Zip:</strong> <span><%= @zip %></span></div>
    </div>
  </div>
</div>
